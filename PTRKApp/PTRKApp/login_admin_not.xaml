<Page x:Class="PTRKApp.login_admin_not"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PTRKApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="login_admin_not">

    <Grid>
        <Image Source="q4.png" Stretch="Fill"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Выберите способ входа" Margin="10" Foreground="Black" FontSize="16" FontFamily="Arial" FontWeight="Bold"/>
            <Button x:Name="Btn_Admin" Content="Администратор" Margin="10" Foreground="Black" FontFamily="Arial" FontSize="16" FontWeight="Bold" FontStyle="Italic" RenderTransformOrigin="-4.264,-0.089" Width="150" Click="Btn_Admin_Click"/>
            <Button x:Name="Btn_No_Admin" Content="Пользователь" Margin="10" Foreground="Black" FontFamily="Arial" FontSize="16" FontWeight="Bold" FontStyle="Italic" RenderTransformOrigin="-4.264,-0.089" Width="150" Click="Btn_No_Admin_Click"/>

        </StackPanel>
    </Grid>
</Page>
