<Page x:Class="PTRKApp.STR.DopMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PTRKApp.STR"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DopMenu">

    <Grid>
        <Image Source="/q5.png" Stretch="Fill"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button x:Name="Button1" Margin="0,0,5,0" Content="Математика" Height="28" Width="106" FontSize="18" Click="Button1_Click" />
            <Button x:Name="Button3" Margin="0,0,5,0" Content="Запрос" Height="28" Width="144" FontSize="18" Click="Button3_Click" />
            <Button x:Name="Button5" Margin="0,0,5,0" Content="Назад" Height="28" Width="106" FontSize="18" Click="Button5_Click" />      
        </StackPanel>

    </Grid>
</Page>
